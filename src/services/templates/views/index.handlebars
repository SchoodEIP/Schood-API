    <style>
        body: {
            color: black;
        }
    </style>
</head>
<body style="width: 600px; margin-left: auto; margin-right: auto;">
    <div style="border: 1px solid black;  width: 100%">
        {{>header}}
        <div style="width: 544px; height: 766px; margin-left: 50px;">
            <span style="font-weight: 700; font-size: 36px; margin-left: 83px;">{{title}}</span>
            <img style="border-radius: 20px;" src="https://i.imgur.com/FH3cgjv.png" alt="img">
            <div style="font-size: 19px; font-weight: normal; margin: 0 36px 10px auto; white-space: pre-line; text-align: center;">
                {{body}}
            </div>
            {{#if connect}}
                <a style="border-radius: 4px; border: 1px black solid; width: 114px; height: 42px; text-decoration: none; display: block; text-align: center; margin-left: 196px;" href="https://demo.schood.fr">
                    <span style="font-size: 17px; font-weight: 600; color: black; display: block; margin-top: 9px;">Se connecter</span>
                </a>
            {{else}}
                <a style="border-radius: 4px; border: 1px black solid; width: 114px; height: 42px; text-decoration: none; display: block; text-align: center; margin-left: 196px;" href="https://demo.schood.fr">
                    <span style="font-size: 17px; font-weight: 600; color: black; display: block; margin-top: 9px;">Retours beta</span>
                </a>
            {{/if}}
        </div>
        {{>footer}}
    </div>
